{
    "env" : {
        "browser": true,
        "node" : true
    },
    "extends" : [
        "eslint:recommended",
        "plugin:vue/vue3-recommended"
    ],
    "rules" : {
        "semi" : ["error", "always"],
        "quotes" : ["error", "single"],
        "vue/html-closing-bracket-newline": ["error", {
            "singleline": "never",
            "multiline": "never"
          }],
          "vue/html-self-closing": ["error", {
            "html": {
              "void": "always",
              "normal": "never",
              "component": "always"
            },
            "svg": "always",
            "math": "always"
          }],
          "vue/multi-word-component-names": ["error", {
            "ignores": ["Hello", "Search", "Movie"]
          }]
    }
}